---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css"
      rel="stylesheet"
    />

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"
    ></script>
  </head>
  <body>
    <slot />
    <div class="glas"></div>
    <footer class="footer">
      <a href="http://josu.dev" target="_blank" rel="noopener noreferrer">
        &copy; 2024 JosttMe
      </a>
    </footer>
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #000021;
    color: #eee;
    scroll-behavior: smooth;
    scroll-duration: 1s; /* duraci√≥n del scroll */
  }

  .glas {
    background: #0099ff1a;
    filter: blur(100px);
    width: 300px;
    height: 300px;
    position: fixed;
    transform: translate(-50%, -50%);
    left: 50%;
    top: 230px;
    z-index: -1;
  }
  .footer {
    width: 100%;
    min-height: 2rem;
    display: grid;
    justify-items: center;

    a {
      color: #eee;
      opacity: 0.8;
      text-align: center;
      font-size: 1rem;
    }
    a:hover {
      color: #339dff;
    }
  }
</style>
